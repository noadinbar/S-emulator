<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<SplitPane
        xmlns="http://javafx.com/javafx/24.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="application.outputs.OutputsController"
        orientation="VERTICAL"
        dividerPositions="0.65"
        prefWidth="320.0" prefHeight="200.0">

    <items>
        <!-- למעלה: תצוגת משתנים כטקסט חופשי -->
        <AnchorPane>
            <children>
                <HBox spacing="8.0"
                      AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0"
                      AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                    <children>
                        <Label text="Variables:"/>
                        <TextArea fx:id="txtVariables"
                                  wrapText="true"
                                  editable="false"
                                  prefRowCount="5"/>
                    </children>
                </HBox>
            </children>
        </AnchorPane>

        <!-- למטה: תצוגת Cycles בשורת טקסט (TextField) -->
        <AnchorPane>
            <children>
                <HBox spacing="8.0"
                      AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0"
                      AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                    <children>
                        <Label text="Cycles:"/>
                        <TextField fx:id="txtCycles"
                                   editable="false"
                                   promptText="0"
                                   prefWidth="120.0"/>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </items>

    <padding><Insets top="5.0" right="5.0" bottom="5.0" left="5.0"/></padding>
</SplitPane>
