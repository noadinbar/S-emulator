<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="300.0" prefWidth="100.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ProgramSceneController">

   <children>
      <!-- כותרת עליונה -->
      <fx:include fx:id="header" source="header/header.fxml" />

      <!-- גוף המסך: שמאל (תוכנית/סיכום/שרשרת) | ימין (הרצה/פלט/קלט/היסטוריה) -->
      <SplitPane dividerPositions="0.67">
         <items>

            <!-- עמודה שמאלית -->
            <VBox spacing="8.0">
               <children>
                  <!-- טבלת התוכנית -->
                  <fx:include fx:id="programTable" source="table/instruction/instructions.fxml" />

                  <!-- סיכום B/S -->
                  <fx:include fx:id="summary" source="summary/summary.fxml" />

                  <!-- שרשרת/History של פקודה נבחרת (טבלת הוראות שנייה) -->
                  <fx:include fx:id="chainTable" source="table/instruction/instructions.fxml" />
               </children>
               <padding><Insets bottom="8" left="8" right="8" top="8" /></padding>
            </VBox>

            <!-- עמודה ימנית -->
            <VBox spacing="8.0">
               <children>
                  <!-- כפתורי ריצה/דיבאגר -->
                  <fx:include fx:id="runOptions" source="run/options/run_options.fxml" />

                  <!-- פלטים ומשתנים (שמאל) + קלטים (ימין) זה לצד זה -->
                  <HBox spacing="8.0">
                     <children>
                        <fx:include fx:id="outputs" source="outputs/outputs.fxml" />
                        <fx:include fx:id="inputs" source="inputs/inputs.fxml" />
                     </children>
                  </HBox>

                  <!-- היסטוריית ריצות -->
                  <fx:include fx:id="history" source="table/history/history.fxml" />
               </children>
               <padding><Insets bottom="8" left="8" right="8" top="8" /></padding>
            </VBox>

         </items>
      </SplitPane>
   </children>
   <padding><Insets bottom="8" left="8" right="8" top="8" /></padding>
</VBox>
